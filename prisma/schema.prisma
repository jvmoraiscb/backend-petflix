// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model PrismaUser {
  id              Int          @id @default(autoincrement())
  email           String       @unique
  password        String
  name            String
  profilePic      String
  moviesId        Int[]
  evaluationsId   Int[]
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
}

model PrismaMovie {
  id            Int          @id @default(autoincrement())
  idImdb        String       @unique
  title         String
  poster        String
  evaluationsId Int[]
  UsersId       Int[]
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
}

model PrismaEvaluation {
  id            Int      @id @default(autoincrement())
  rating        Int
  comment       String
  userId        Int
  movieId       Int
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
