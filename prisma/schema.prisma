// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model PrismaUser {
  id              String    @id
  email           String    @unique
  password        String
  name            String
  profilePic      String
  moviesId        String[]
  evaluationsId   String[]
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

model PrismaMovie {
  id            String      @id
  imdbId        String      @unique
  title         String
  year          Int
  genre         String
  plot          String
  poster        String
  evaluationsId String[]
  UsersId       String[]
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

model PrismaEvaluation {
  id            String      @id
  rating        Int
  comment       String
  userId        String
  movieId       String
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}
