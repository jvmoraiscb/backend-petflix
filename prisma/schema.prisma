// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model PrismaUser {
  id              String    @id
  email           String    @unique
  password        String
  name            String
  profilePic      String
  movies          PrismaMovie[]
  evaluations     PrismaEvaluation[]
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

model PrismaMovie {
  id            String      @id
  imdbId        String      @unique
  title         String
  type          String
  runtime       String
  year          String
  genre         String
  plot          String
  poster        String
  director      String
  writer        String
  actors        String
  evaluations   PrismaEvaluation[]
  Users         PrismaUser[]
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

model PrismaEvaluation {
  id            String      @id
  rating        Int
  comment       String
  user          PrismaUser?    @relation(fields: [userId], references: [id])
  userId        String?
  movie         PrismaMovie?   @relation(fields: [movieId], references: [id])
  movieId       String?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}
